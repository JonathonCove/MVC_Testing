@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>I ♥ ASP.NET</h1>
    <p class="lead">♥♥ ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript. ♥♥</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Looks like you're using @Request.Browser.Browser <!--This thinks edge is chrome. --></h2>
    </div>

    <div class="col-md-8">
        @{List<decimal> amounts = new List<decimal>() { 100, 12, -4, 124.44M };}

        <ul>
            @foreach (decimal d in amounts) {
                <li>
                    @formatAmount(d)
                </li>
            }
        </ul>

        @helper formatAmount(decimal d) {
        string color = d < 0 ? "red" : "green";
            <span style="color:@color">£@d.ToString("N2")</span>
        }
    </div>


    <div class="col-md-4">
        <a href="@Url.Action("Details", "CheckingAccount")" class="btn btn-primary btn-large btn-block">View Checking account</a>
    </div>

</div>
